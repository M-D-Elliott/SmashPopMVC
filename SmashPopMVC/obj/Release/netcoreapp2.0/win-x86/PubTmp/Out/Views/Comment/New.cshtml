@model SmashPopMVC.Models.Comment.NewCommentModel

<form asp-controller="Comment" asp-action="Add" class="AddCommentForm">
    <input type="hidden" asp-for="@Model.PosteeID" class="PosteeID" />
    <input type="hidden" asp-for="@Model.PosterID" class="PosterID" />
    <input type="hidden" asp-for="@Model.ReplyToID" class="ReplyToID" />
    <input type="hidden" asp-for="@Model.MaxDepth" class="Depth" value="@Model.MaxDepth" />
    <textarea placeholder="Content..." asp-for="@Model.Content" class="content-input" style="display: block;"></textarea>
</form>

