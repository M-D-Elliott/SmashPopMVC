@model SmashPopMVC.Models.Comment.NewCommentModel

<form asp-controller="Comment" asp-action="Add" class="NewCommentForm">
    <input type="hidden" asp-for="@Model.PosteeID" id="PosteeID" />
    <input type="hidden" asp-for="@Model.PosterID" id="PosterID" />
    <input type="hidden" asp-for="@Model.ReplyToID" class="ReplyToID" value="@Model.ReplyToID" />
    <input type="hidden" asp-for="@Model.Content" id="Content" value="" />
    <input type="hidden" asp-for="@Model.MaxDepth" class="Depth" value="@Model.MaxDepth" />
    <button id="@(Model.ReplyToID  == null ? "NewComment" : "")" class="@("btn btn-success" + ((Model.ReplyToID == null) ? "" : " comment-reply"))" value="submit" onclick="return false;"><i class="fas fa-plus"></i>@(Model.ReplyToID == null ? "New" : "Reply")</button>
</form>