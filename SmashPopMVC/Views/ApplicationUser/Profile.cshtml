@using Microsoft.AspNetCore.Identity;
@using SmashPopMVC.Models.ApplicationUser
@using SmashPopMVC.Models.Comment

@model SmashPopMVC.Models.ApplicationUser.ProfileIndexModel

<div class="container">
    <div id="Profile" class="row">
        <div id="ProfileData" class="col-sm-6 col-md-3 pull-left">
            @Model.Name
            <div id="ProfileImages" class="row">
                @if (Model.ID == Model.CurrentUserID)
                {
                    <div id="Main" class="main col-6 card flex-item modal-link updatable">
                        <img id="@Model.UpdateViewModel.MainID" title="@Model.Main.Name" class="card-img-top character @Model.Main.ImageName" alt="...">
                    </div>
                    <div id="Alt" class="alt col-6 card flex-item modal-link updatable">
                        <img id="@Model.UpdateViewModel.AltID" title="@Model.Alt.Name"  class="card-img-top character @Model.Alt.ImageName" alt="...">
                    </div>
                }
                else
                {
                    <div class="col-6 card flex-item" title="@Model.Main.Name">
                        <img class="card-img-top character @Model.Main.ImageName" alt="...">
                    </div>
                    <div class="col-6 card flex-item" title="@Model.Alt.Name">
                        <img class="card-img-top character @Model.Alt.ImageName" alt="...">
                    </div>
                }

            </div>
            @Html.Partial("_UserUpdatePartial", Model.UpdateViewModel)
            @if (User.Identity.IsAuthenticated && Model.ID != Model.CurrentUserID && !Model.CurrentUserIsFriends)
            {
                @Html.Partial("_AddFriendPartial", new AddFriendViewModel { UserID=Model.CurrentUserID, FriendID=Model.ID });
            }
        </div>
        <div id="RecentVotes" class="col-sm-6 col-md-3 pull-right">
            <a asp-controller="Vote" asp-action="GetUserVotes" asp-route-userID="@Model.ID"><h4>Votes</h4></a>
        </div>
    </div>
    <div id="ProfileSocial">
        <div id="ProfileComments" class="col-md-8 pull-left">
            <div id="comment-temp"></div>
            @Html.Partial("../Comment/_NewPartial", new NewCommentModel { PosteeID=Model.ID, PosterID=Model.CurrentUserID, Title="", Content="" })
            <div id="comments-body">
                @foreach (var comment in Model.Comments)
                {
                    <div class="comment">
                        @Html.Partial("../Comment/Edit", comment)
                    </div>
                }
            </div>
        </div>
        <div id="ProfileFriends" class="col-md-4 pull-right">
            <p>Friends:</p>
            <div class="row">
                @foreach (var friend in Model.Friends.ApprovedFriends)
                {
                    <div class="col-6 card flex-item" title="@friend.FriendData.MainName">
                        <a asp-controller="ApplicationUser" asp-action="Profile" asp-route-id="@friend.FriendData.ID"><h4 class="card-title">@friend.FriendData.Name</h4></a>
                        <img class="card-img-top character @friend.FriendData.MainImage" alt="...">
                    </div>
                }
            </div>
            @if (User.Identity.IsAuthenticated && Model.ID == Model.CurrentUserID)
            {
                <p>Accept?</p>
                <div class="row">
                    @foreach (var friend in Model.Friends.FriendRequests)
                    {
                        <p>@friend.FriendData.Name</p>
                        @Html.Partial("_AcceptFriendPartial", new AcceptFriendViewModel { RequestID = friend.RequestID });
                    }
                </div>
            }
        </div>
    </div>
</div>